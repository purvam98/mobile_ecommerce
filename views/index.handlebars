  <h1 style="text-align: center;">Hot Juicy Burgs!</h1>
  <div>
<div class="row">
  <div class="panel col-lg-5">
    <h6>Burgs Not Eaten</h6>

<ul style="margin: auto;">
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}
        <div class="btn-group ">
        <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="1">
          <button class="btn btn-primary btn-block" style="padding: 10px;" type="submit">Eat!</button>
        </form>
        <form action="/burgers/delete/{{this.id}}?_method=DELETE" method="POST">
        <button class="btn btn-primary btn-block" type="submit">Delete</button>
        </form>
        </div>
      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>
  <div class="panel col-lg-5 devoured">
<h6>Devoured Burgs</h6>



<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
</div>


<h2>Add a Burg</h2>
<form action="/burgers/" method="POST">

  <div class="form-group">
    <label for="burg">Burg Name:</label>
    <input type="text" id="burg" name="burger_name">
  </div>
  <button type="submit">Add Burg</button>
</form>
